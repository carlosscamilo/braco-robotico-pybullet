<?xml version="1.0"?>
<robot name="braco_planar_2dof">

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.15"/>
      </geometry>
      <material name="cinza_base">
        <color rgba="0.5 0.5 0.55 1"/>
      </material>
    </visual>
    <visual>
      <origin xyz="0 0 0.105" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.155"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.25 0.25 0.25 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <link name="link_1">
    <!-- Articulação inferior -->
    <visual>
      <origin xyz="0 0 0.02" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <!-- Corpo principal -->
    <visual>
      <origin xyz="0 0 0.35" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.66"/>
      </geometry>
      <material name="vermelho">
        <color rgba="0.9 0.1 0.1 1"/>
      </material>
    </visual>
    <!-- Faixa decorativa -->
    <visual>
      <origin xyz="0 0 0.35" rpy="0 0 0"/>
      <geometry>
        <box size="0.082 0.082 0.08"/>
      </geometry>
      <material name="branco_link1">
        <color rgba="1.0 1.0 1.0 1"/>
      </material>
    </visual>
    <!-- Articulação superior -->
    <visual>
      <origin xyz="0 0 0.68" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.35" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.7"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.35" rpy="0 0 0"/>
      <inertia ixx="0.021" ixy="0" ixz="0" iyy="0.021" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="20" velocity="1.0"/>
  </joint>

  <link name="link_2">
    <!-- Articulação inferior (conecta com link_1) -->
    <visual>
      <origin xyz="0 0 0.02" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.048"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <!-- Corpo principal -->
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <box size="0.075 0.075 0.56"/>
      </geometry>
      <material name="verde">
        <color rgba="0.1 0.9 0.2 1"/>
      </material>
    </visual>
    <!-- Faixa decorativa -->
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <box size="0.078 0.078 0.08"/>
      </geometry>
      <material name="branco_link2">
        <color rgba="1.0 1.0 1.0 1"/>
      </material>
    </visual>
    <!-- Articulação superior (para o punho) -->
    <visual>
      <origin xyz="0 0 0.58" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.09" radius="0.042"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.6"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <inertia ixx="0.009" ixy="0" ixz="0" iyy="0.009" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.7" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.8" upper="-0.5" effort="15" velocity="1.0"/>
  </joint>

  <!-- Punho (Wrist) -->
  <link name="wrist">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="azul">
        <color rgba="0.1 0.3 1.0 1"/>
      </material>
    </visual>
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.015" radius="0.042"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.35 0.35 0.35 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="joint_wrist" type="fixed">
    <parent link="link_2"/>
    <child link="wrist"/>
    <origin xyz="0 0 0.6" rpy="0 -1.57 0"/>
  </joint>

  <!-- Base da Garra -->
  <link name="gripper_base">
    <visual>
      <geometry>
        <box size="0.12 0.08 0.06"/>
      </geometry>
      <material name="cinza_garra">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.125 0.085 0.015"/>
      </geometry>
      <material name="laranja">
        <color rgba="1.0 0.5 0.0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.12 0.08 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="joint_gripper_base" type="fixed">
    <parent link="wrist"/>
    <child link="gripper_base"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
  </joint>

  <!-- Dedo Esquerdo -->
  <link name="left_finger">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.1"/>
      </geometry>
      <material name="amarelo">
        <color rgba="1.0 0.9 0.0 1"/>
      </material>
    </visual>
    <visual>
      <origin xyz="0 0 0.105" rpy="0 0 0"/>
      <geometry>
        <box size="0.022 0.032 0.012"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="joint_left_finger" type="prismatic">
    <parent link="gripper_base"/>
    <child link="left_finger"/>
    <origin xyz="0 0.025 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="0.04" effort="10" velocity="0.5"/>
  </joint>

  <!-- Dedo Direito -->
  <link name="right_finger">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.1"/>
      </geometry>
      <material name="amarelo_direito">
        <color rgba="1.0 0.9 0.0 1"/>
      </material>
    </visual>
    <visual>
      <origin xyz="0 0 0.105" rpy="0 0 0"/>
      <geometry>
        <box size="0.022 0.032 0.012"/>
      </geometry>
      <material name="cinza_escuro">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="joint_right_finger" type="prismatic">
    <parent link="gripper_base"/>
    <child link="right_finger"/>
    <origin xyz="0 -0.025 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.04" upper="0" effort="10" velocity="0.5"/>
  </joint>

</robot>